  .GUIA para INSTALAR Ruby on Rails


  .INSTALL RUBY

curl -sL https://deb.nodesource.com/setup_8.x | sudo -E bash -
curl -sS https://dl.yarnpkg.com/debian/pubkey.gpg | sudo apt-key add -
echo "deb https://dl.yarnpkg.com/debian/ stable main" | sudo tee /etc/apt/sources.list.d/yarn.list

sudo apt-get update
sudo apt-get install git-core curl zlib1g-dev build-essential libssl-dev libreadline-dev libyaml-dev libsqlite3-dev sqlite3 libxml2-dev libxslt1-dev libcurl4-openssl-dev software-properties-common libffi-dev nodejs yarn

cd
git clone https://github.com/rbenv/rbenv.git ~/.rbenv
echo 'export PATH="$HOME/.rbenv/bin:$PATH"' >> ~/dotfiles-local/zshrc.local
echo 'eval "$(rbenv init -)"' >> ~/dotfiles-local/zshrc.local
exec $SHELL

git clone https://github.com/rbenv/ruby-build.git ~/.rbenv/plugins/ruby-build
echo 'export PATH="$HOME/.rbenv/plugins/ruby-build/bin:$PATH"' >> ~/dotfiles-local/zshrc.local
exec $SHELL

rcup

.(Reiniciar terminal)

rbenv install 2.5.1
rbenv global 2.5.1
ruby -v

gem install bundler
rbenv rehash


  .INSTALL RAILS

curl -sL https://deb.nodesource.com/setup_8.x | sudo -E bash -
sudo apt-get install -y nodejs

gem install rails -v 5.2.0

rbenv rehash

rails -v
# Rails 5.2.0


  .SETTING UP PostgreSQL

sudo sh -c "echo 'deb http://apt.postgresql.org/pub/repos/apt/ xenial-pgdg main' > /etc/apt/sources.list.d/pgdg.list"
wget --quiet -O - http://apt.postgresql.org/pub/repos/apt/ACCC4CF8.asc | sudo apt-key add -

sudo apt-get update
sudo apt-get install postgresql-common
sudo apt-get install postgresql-9.5 libpq-dev

  .Atençao que <USERNAME significa que é para trocar pelo USERMANE  pretendido
sudo -u postgres createuser <USERNAME -s

  .If you would like to set a password for the user, you can do the following
sudo -u postgres psql

  .Atençao que <PASSWORD significa que é para trocar pela PASSWORD  pretendida
postgres=# \password
#Enter new password:
<PASSWORD
#Enter it again:
<PASSWORD
#postgres=#
\q

  .PostgreSQL local connections without password
sudo gedit /etc/postgresql/POSTGRE_VERSION/main/pg_hba.conf



